# ===========================================
# MECACOMM B2B - Configuration
# ===========================================
# Copiez ce fichier en .env et modifiez les valeurs

# Ports des services
FRONTEND_PORT=4000
BACKEND_PORT=4001

# Base de données PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=mecacomm_b2b

# JWT Authentication
JWT_SECRET=change-this-to-a-secure-random-string-in-production
JWT_EXPIRES_IN=7d

# CORS (optionnel - liste séparée par des virgules)
# CORS_ORIGINS=http://localhost:4000,http://localhost:4001

# SQL Server DMS (optionnel)
SQL_SERVER_HOST=
SQL_SERVER_PORT=1433
SQL_SERVER_USER=
SQL_SERVER_PASSWORD=
SQL_SERVER_DATABASE=

# Gemini API (optionnel - pour fonctionnalités IA)
GEMINI_API_KEY=

# Frontend - API Backend URL (pour Vite)
# Laisser vide pour auto-detection basée sur window.location.hostname
# VITE_API_URL=http://localhost:4001/api
